<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <!-- The definition of the Root Spring Container shared by all Servlets and Filters -->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value></param-value>
    </context-param>


    <!-- Creates the Spring Container shared by all Servlets and Filters -->


    <!-- Processes application requests -->
    <servlet>
        <servlet-name>appServlet</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>/WEB-INF/spring/appServlet/servlet-context.xml</param-value>
        </init-param>

        <load-on-startup>1</load-on-startup>
<!--        <multipart-config>-->
<!--            <max-file-size>10485760</max-file-size> &lt;!&ndash; 10MB &ndash;&gt;-->
<!--            <max-request-size>15728640</max-request-size> &lt;!&ndash; 15MB &ndash;&gt;-->
<!--            <file-size-threshold>1048576</file-size-threshold> &lt;!&ndash; 1MB &ndash;&gt;-->
<!--        </multipart-config>-->

        <multipart-config>
<!--            &lt;!&ndash; Maximum size allowed for uploaded files (in bytes) &ndash;&gt;-->
<!--            <max-file-size>52428800</max-file-size> &lt;!&ndash; 50 MB &ndash;&gt;-->
<!--            &lt;!&ndash; Maximum size allowed for multipart/form-data requests (in bytes) &ndash;&gt;-->
<!--            <max-request-size>57671680</max-request-size> &lt;!&ndash; 55 MB &ndash;&gt;-->
            <max-file-size>1073741824</max-file-size>         <!-- 1 GB -->
            <max-request-size>2147483648</max-request-size>   <!-- 2 GB -->
            <!-- Size threshold after which files will be written to disk (in bytes) -->
            <file-size-threshold>0</file-size-threshold>
        </multipart-config>
    </servlet>

    <servlet>
        <servlet-name>statCont</servlet-name>
        <servlet-class>
            org.apache.catalina.servlets.DefaultServlet
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>statCont</servlet-name>
        <url-pattern>*.js</url-pattern>
        <url-pattern>*.css</url-pattern>
        <url-pattern>/images/*</url-pattern>
        <url-pattern>/common/images/*</url-pattern>

    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>appServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <resource-ref>
        <description>postgreSQL Datasource</description>
        <res-ref-name>jdbc/postgres</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
